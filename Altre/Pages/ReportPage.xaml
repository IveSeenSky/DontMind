<Page x:Class="Altre.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Altre.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Отчет по Сотрудникам"
                   Grid.Row="1"
                   Style="{StaticResource TextBlockStyle2}"/>

        <Button x:Name="emplsBtn"
                Grid.Column="1"
                Grid.Row="1"
                Content="Сгенерировать"
                HorizontalAlignment="Left"
                Style="{StaticResource ButtonStyleDefault}"
                Click="emplsBtn_Click"/>

        <Button x:Name="pymntsBtn"
                Grid.Column="1"
                Grid.Row="2"
                Content="Сгенерировать"
                HorizontalAlignment="Left"
                Style="{StaticResource ButtonStyleDefault}"
                Click="pymntsBtn_Click"/>

        <TextBlock Text="Отчет по Выплатам"
                   Grid.Row="2"
                   Style="{StaticResource TextBlockStyle2}"/>
    </Grid>
</Page>
